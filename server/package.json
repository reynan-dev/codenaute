{
	"name": "server",
	"version": "1.0.0",
	"license": "ISC",
	"main": "index.js",
	"scripts": {
		"build": "tsc",
		"migration:generate": "typeorm-ts-node-esm migration:generate ./src/migrations/default -d ./src/db.ts",
		"migration:run": "typeorm-ts-node-esm migration:run -d ./src/db.ts",
		"start": "node dist/index.js",
		"start:watch": "tsc -w & nodemon -L dist/index.js",
		"test": "jest --runInBand --verbose --coverage",
		"test:watch": "jest --watchAll --runInBand --verbose --coverage"
	},
	"dependencies": {
		"apollo-server": "3.11.1",
		"apollo-server-core": "3.11.1",
		"apollo-server-express": "3.11.1",
		"bcryptjs": "^2.4.3",
		"class-validator": "0.14.0",
		"cookie": "^0.5.0",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"graphql": "15.8.0",
		"pg": "^8.10.0",
		"reflect-metadata": "^0.1.13",
		"ts-node": "^10.9.1",
		"type-graphql": "^1.1.1",
		"typeorm": "^0.3.12"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/cookie": "^0.5.1",
		"@types/jest": "^29.5.0",
		"@types/node": "^18.15.10",
		"@types/uuid": "^9.0.1",
		"jest": "^29.5.0",
		"nodemon": "^2.0.22",
		"ts-jest": "^29.0.5",
		"typescript": "~4.8.4",
		"uuid": "^9.0.0"
	},
	"proxy": "http://server:5000"
}
