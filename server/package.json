{
	"name": "server",
	"version": "1.0.0",
	"license": "ISC",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsc && tsc-alias",
		"ci": "pnpm build && pnpm test",
		"codenaute": "node ./dist/utils/commands/codenaute-cli.js",
		"migration:generate": "npm run typeorm -- migration:generate ./src/utils/migrations/codenaute",
		"migration:run": "npm run typeorm -- migration:run",
		"start": "node dist/index.js",
		"start:watch": "tsc -w & nodemon -L dist/index.js",
		"test": "jest --runInBand --verbose --coverage",
		"test:ci": "jest --runInBand --verbose",
		"test:watch": "jest --watchAll --runInBand --verbose --coverage",
		"typeorm": "typeorm-ts-node-esm -d ./src/utils/configs/database.ts"
	},
	"dependencies": {
		"apollo-server": "3.11.1",
		"apollo-server-core": "3.11.1",
		"apollo-server-express": "3.11.1",
		"bcryptjs": "^2.4.3",
		"class-validator": "0.14.0",
		"commander": "^10.0.1",
		"cookie": "^0.5.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"graphql": "15.8.0",
		"pg": "^8.10.0",
		"reflect-metadata": "^0.1.13",
		"ts-node": "^10.9.1",
		"type-graphql": "^1.1.1",
		"typeorm": "^0.3.12"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/cookie": "^0.5.1",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.0",
		"@types/node": "^18.15.10",
		"@types/uuid": "^9.0.1",
		"jest": "^29.5.0",
		"nodemon": "^2.0.22",
		"ts-jest": "^29.1.0",
		"tsc-alias": "^1.8.7",
		"tsconfig-paths": "^4.2.0",
		"typescript": "~5.0",
		"uuid": "^9.0.0"
	},
	"proxy": "http://server:5000/"
}
